package com.jeongwon.chap2;

import java.util.Scanner;

public class Ex3_1 {

	public static void main(String[] args) {
		
		Scanner scanner = new Scanner(System.in);
		int num,sum=0;
		System.out.print("숫자입력:");
		num=scanner.nextInt();
		
		for(int i=10;i<=100000;i=i*10){
			sum+=num%i;
		}
		System.out.println(sum);
	}
}
